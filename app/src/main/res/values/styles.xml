<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--Set the icons-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:autoCompleteTextViewStyle">@style/CustomActionBar.AutocompleteTextView
        </item>
    </style>

    <!--As this is what the search view uses. How ugly.-->
    <style name="CustomActionBar.AutocompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="BookListViewHolderTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BookListViewHolderIsbn">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="BookListViewHolderAuthor">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="BookDetailKey">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BookDetailValue">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LocationAddLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
